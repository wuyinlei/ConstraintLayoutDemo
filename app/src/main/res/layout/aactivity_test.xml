<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/tv_item_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="健康营养套餐一号店"
        android:textColor="#ff999999"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_two"
        tools:layout_editor_absoluteX="16dp"
        tools:text="健康营养套餐一号店"/>

    <TextView
        android:id="@+id/tv_item_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="鲜虾盖浇饭"
        android:textColor="#FF333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        tools:layout_editor_absoluteY="314dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="293dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/timg"/>

    <TextView
        android:id="@+id/tv_item_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_one"
        tools:text="肉质柔软，细嫩多汁"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_one"/>

    <TextView
        android:id="@+id/tv_price_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥11.50"
        android:textColor="#FFFF0000"
        android:textSize="18sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_item_three"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_three"/>

    <TextView
        android:id="@+id/tv_price_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:text="￥12.00"
        android:textColor="#FF999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_one"
        app:layout_constraintLeft_toRightOf="@+id/tv_price_one"
        app:layout_constraintTop_toTopOf="@+id/tv_price_one"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.333"/>

    <TextView
        android:id="@+id/tv_price_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="已售45份"
        android:textColor="#FF666666"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_two"
        tools:layout_editor_absoluteX="145dp"/>

</android.support.constraint.ConstraintLayout>